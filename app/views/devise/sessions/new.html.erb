

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  





<div class="row" style="margin-top: 6%;">
  <div class="col-md-3"></div>
  <div class="col-md-6" style="background-color: #11B27A ;color:white;padding: 30px;border-radius: 20px;">
     <h2 style="margin-left: 150px;font-size: 40px;">Login Here</h2>
      <div class="field form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control"%>
      </div>
       <div class="field form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password" , class: "form-control"%>
       </div>
  <% if devise_mapping.rememberable? %>
        <div class="field form-check"">
          <label style="margin-right: 50px;">Remember Me</label> <%= f.check_box :remember_me , class: "form-check-input" %>
          <%# f.label :remember_me , class: "form-control"%>
        </div>
  <% end %>
      <div class="actions form-group">
          <%= f.submit "Log in" , class: "btn btn-primary btn-lg btn-block"%>
     </div>
     <%= render "devise/shared/links" ,class: "form-control"  %>

  </div>
  <div class="col-md-3"></div>
</div>

  

  
<% end %>

